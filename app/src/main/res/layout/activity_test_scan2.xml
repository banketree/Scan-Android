<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch">

    <com.uc56.scancore.ScanView2
        android:id="@+id/zxingview"
        style="@style/MatchMatch"
        app:sc_animTime="1000"
        app:sc_borderColor="@android:color/white"
        app:sc_borderSize="1dp"
        app:sc_cornerColor="#f57257"
        app:sc_cornerLength="20dp"
        app:sc_cornerSize="3dp"
        app:sc_customScanLineDrawable="@drawable/scan_icon_scanline"
        app:sc_isCenterVertical="true"
        app:sc_isOnlyDecodeScanBoxArea="false"
        app:sc_isScanLineReverse="true"
        app:sc_isShowDefaultGridScanLineDrawable="false"
        app:sc_isShowDefaultScanLineDrawable="true"
        app:sc_isShowTipBackground="false"
        app:sc_isShowTipTextAsSingleLine="true"
        app:sc_isTipTextBelowRect="true"
        app:sc_maskColor="#33000000"
        app:sc_rectWidth="200dp"
        app:sc_scanLineColor="@color/colorPrimaryDark"
        app:sc_scanLineMargin="0dp"
        app:sc_scanLineSize="0.5dp"
        app:sc_tipText="将二维码/条码放入框内，即可自动扫描"
        app:sc_tipTextColor="@android:color/white"
        app:sc_tipTextSize="12sp"
        app:sc_toolbarHeight="0dp" />

    <include layout="@layout/toolbar" />

    <include layout="@layout/view_control" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/tv_scan_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:textColor="@android:color/white" />
</RelativeLayout>